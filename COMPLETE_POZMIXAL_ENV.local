NEXT_PUBLIC_WHATSAPP_SUPPORT=https://wa.me/your-whatsapp-number
NEXT_PUBLIC_EMAIL_SUPPORT=support@pozmixal.com

# ========================================
# üìß EMAIL SERVICES (OPTIONAL)
# Leave empty for local development - emails will be logged to console
# ========================================
RESEND_API_KEY=re_your-resend-api-key-here
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-mailgun-domain.com

# ========================================
# ‚òÅÔ∏è CLOUD STORAGE (OPTIONAL)
# Leave empty for local development - files stored locally
# ========================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudflare R2
CLOUDFLARE_R2_ACCESS_KEY_ID=your-cloudflare-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-cloudflare-r2-secret-key
CLOUDFLARE_R2_BUCKET=your-r2-bucket-name
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# ========================================
# üìà MONITORING & LOGGING (OPTIONAL)
# Leave empty for local development
# ========================================
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key-here
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key-here

# ========================================
# üöÄ FEATURE FLAGS (OPTIONAL)
# Control which features are enabled
# ========================================
ENABLE_MARKETPLACE=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=false
ENABLE_THIRD_PARTY_INTEGRATIONS=true
ENABLE_WEBHOOKS=true
ENABLE_API=true

# ========================================
# üè¢ ORGANIZATION & BRANDING
# ========================================
NEXT_PUBLIC_APP_NAME=Pozmixal
NEXT_PUBLIC_APP_DESCRIPTION=Pozmixal - Social Media Management Platform
NEXT_PUBLIC_COMPANY_NAME=Pozmixal Inc.
NEXT_PUBLIC_DOMAIN=pozmixal.com

# ========================================
# üîó CORS & SECURITY
# ========================================
CORS_ORIGIN=http://localhost:4200
ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# ========================================
# üìù NOTES FOR LOCAL DEVELOPMENT:
# ========================================
# 1. Most API keys are optional for basic local development
# 2. Social media integrations will work with placeholder data
# 3. Payments and billing are disabled by default
# 4. Email services will log to console instead of sending emails
# 5. Analytics and monitoring are optional for local development
# 6. All "your-*-here" values should be replaced with actual keys when needed
# 7. Never commit real API keys to version control
# 8. Use .env.local for sensitive values that shouldn't be shared

# ========================================
# üéØ QUICK START:
# 1. Copy this file to .env.local
# 2. Copy this file to .env  
# 3. Start Docker: docker compose -f docker-compose.dev.yaml up -d
# 4. Start backend: node FINAL_ERROR_FREE_BACKEND.js
# 5. Start frontend: pnpm --filter ./apps/frontend run dev
# 6. Access: http://localhost:4200
# ========================================