# ========================================
# POZMIXAL - COMPLETE LOCAL ENVIRONMENT CONFIGURATION
# Copy this file to .env.local and .env for full functionality
# ========================================

# ========================================
# üöÄ CRITICAL BACKEND/FRONTEND CONNECTIVITY
# These settings eliminate all connection errors
# ========================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:4200
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000
BACKEND_INTERNAL_URL=http://localhost:3000

# ========================================
# üîê SECURITY & AUTHENTICATION
# ========================================
JWT_SECRET=pozmixal-local-development-secret-key-12345-change-in-production
NOT_SECURED=true
IS_GENERAL=true
DISABLE_X_ANALYTICS=true

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION (POZMIXAL REBRANDED)
# PostgreSQL running in Docker
# ========================================
DATABASE_URL=postgresql://pozmixal-local:pozmixal-local-pwd@localhost:5432/pozmixal-db-local
DATABASE_DIRECT_URL=postgresql://pozmixal-local:pozmixal-local-pwd@localhost:5432/pozmixal-db-local

# ========================================
# üíæ REDIS CONFIGURATION
# Redis running in Docker
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# üé® POZMIXAL OAUTH SETTINGS (FULLY REBRANDED)
# ========================================
NEXT_PUBLIC_POZMIXAL_OAUTH_DISPLAY_NAME=Authentik
NEXT_PUBLIC_POZMIXAL_OAUTH_LOGO_URL=/icons/generic-oauth.svg
POZMIXAL_GENERIC_OAUTH=false
POZMIXAL_OAUTH_URL=https://auth.example.com
POZMIXAL_OAUTH_AUTH_URL=https://auth.example.com/application/o/authorize
POZMIXAL_OAUTH_TOKEN_URL=https://auth.example.com/application/o/token
POZMIXAL_OAUTH_USERINFO_URL=https://auth.example.com/application/o/userinfo
POZMIXAL_OAUTH_CLIENT_ID=your-oauth-client-id-here
POZMIXAL_OAUTH_CLIENT_SECRET=your-oauth-client-secret-here

# ========================================
# üìÅ APPLICATION STORAGE & UPLOADS
# ========================================
STORAGE_PROVIDER=local
NEXT_PUBLIC_UPLOAD_STATIC_DIRECTORY=/uploads
UPLOAD_DIRECTORY=./uploads
DISABLE_IMAGE_COMPRESSION=false

# ========================================
# üîß DEVELOPMENT & DEBUGGING
# ========================================
API_LIMIT=30
NX_ADD_PLUGINS=false
DISABLE_RATE_LIMITING=true

# ========================================
# üåê SOCIAL MEDIA API KEYS
# Add your API keys here when needed
# ========================================

# Twitter/X (optional for local dev)
X_API_KEY=your-twitter-api-key-here
X_API_SECRET=your-twitter-api-secret-here
X_CLIENT_ID=your-twitter-client-id-here
X_CLIENT_SECRET=your-twitter-client-secret-here

# LinkedIn (optional for local dev)
LINKEDIN_CLIENT_ID=your-linkedin-client-id-here
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-here

# Reddit (optional for local dev)
REDDIT_CLIENT_ID=your-reddit-client-id-here
REDDIT_CLIENT_SECRET=your-reddit-client-secret-here

# GitHub (optional for local dev)
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Google (optional for local dev)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Facebook (optional for local dev)
FACEBOOK_CLIENT_ID=your-facebook-client-id-here
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret-here

# Discord (optional for local dev)
DISCORD_CLIENT_ID=your-discord-client-id-here
DISCORD_CLIENT_SECRET=your-discord-client-secret-here

# ========================================
# ü§ñ AI & THIRD-PARTY SERVICES
# Leave empty for local development
# ========================================
OPENAI_API_KEY=your-openai-api-key-here
FAL_API_KEY=your-fal-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ========================================
# üí≥ PAYMENT & BILLING (OPTIONAL)
# Leave empty for local development
# ========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# ========================================
# üìä ANALYTICS & TRACKING (OPTIONAL)
# Leave empty for local development
# ========================================
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_FACEBOOK_PIXEL=your-facebook-pixel-id-here
NEXT_PUBLIC_TOLT=your-tolt-id-here
NEXT_PUBLIC_GOOGLE_ANALYTICS=your-google-analytics-id-here

# ========================================
# üéß SUPPORT & COMMUNICATION (OPTIONAL)
# ========================================
