# ========================================
# POZMIXAL - Complete Environment Configuration
# Copy this to your .env file for full functionality
# ========================================

# ========================================
# CRITICAL BACKEND/FRONTEND CONNECTIVITY
# ========================================
# These fix "Could not establish connection" errors
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:4200
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000
BACKEND_INTERNAL_URL=http://localhost:3000

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
JWT_SECRET=pozmixal-production-jwt-secret-change-in-production-12345
NOT_SECURED=true
IS_GENERAL=true

# ========================================
# DATABASE CONFIGURATION (POZMIXAL REBRANDED)
# ========================================
DATABASE_URL=postgresql://pozmixal-local:pozmixal-local-pwd@localhost:5432/pozmixal-db-local
DATABASE_DIRECT_URL=postgresql://pozmixal-local:pozmixal-local-pwd@localhost:5432/pozmixal-db-local

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# POZMIXAL OAUTH SETTINGS (REBRANDED)
# ========================================
NEXT_PUBLIC_POZMIXAL_OAUTH_DISPLAY_NAME=Authentik
NEXT_PUBLIC_POZMIXAL_OAUTH_LOGO_URL=/icons/generic-oauth.svg
POZMIXAL_GENERIC_OAUTH=false
POZMIXAL_OAUTH_URL=https://auth.example.com
POZMIXAL_OAUTH_AUTH_URL=https://auth.example.com/application/o/authorize
POZMIXAL_OAUTH_TOKEN_URL=https://auth.example.com/application/o/token
POZMIXAL_OAUTH_USERINFO_URL=https://authentik.example.com/application/o/userinfo
POZMIXAL_OAUTH_CLIENT_ID=
POZMIXAL_OAUTH_CLIENT_SECRET=

# ========================================
# APPLICATION STORAGE & UPLOADS
# ========================================
STORAGE_PROVIDER=local
NEXT_PUBLIC_UPLOAD_STATIC_DIRECTORY=/uploads
DISABLE_IMAGE_COMPRESSION=false

# ========================================
# DEVELOPMENT & DEBUGGING
# ========================================
DISABLE_X_ANALYTICS=true
API_LIMIT=30
NX_ADD_PLUGINS=false

# ========================================
# SOCIAL MEDIA API KEYS (OPTIONAL)
# ========================================
X_API_KEY=
X_API_SECRET=
X_CLIENT_ID=
X_CLIENT_SECRET=

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# ========================================
# AI & THIRD-PARTY SERVICES (OPTIONAL)
# ========================================
OPENAI_API_KEY=
FAL_API_KEY=
HUGGINGFACE_API_KEY=

# ========================================
# PAYMENT & BILLING (OPTIONAL)
# ========================================
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ========================================
# ANALYTICS & TRACKING (OPTIONAL)
# ========================================
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_FACEBOOK_PIXEL=
NEXT_PUBLIC_TOLT=
NEXT_PUBLIC_GOOGLE_ANALYTICS=

# ========================================
# SUPPORT & COMMUNICATION (OPTIONAL)
# ========================================
NEXT_PUBLIC_DISCORD_SUPPORT=
NEXT_PUBLIC_WHATSAPP_SUPPORT=
NEXT_PUBLIC_EMAIL_SUPPORT=support@pozmixal.com

# ========================================
# EMAIL SERVICES (OPTIONAL)
# ========================================
RESEND_API_KEY=
SENDGRID_API_KEY=
MAILGUN_API_KEY=

# ========================================
# CLOUD STORAGE (OPTIONAL)
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

CLOUDFLARE_R2_ACCESS_KEY_ID=
