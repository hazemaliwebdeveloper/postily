# ========================================
# MONITORING & LOGGING (OPTIONAL)
# ========================================
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# ========================================
# FEATURE FLAGS (OPTIONAL)
# ========================================
ENABLE_MARKETPLACE=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_THIRD_PARTY_INTEGRATIONS=true