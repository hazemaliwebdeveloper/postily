# Memory Optimized Environment Configuration
# Use this file for memory-constrained environments

# Node.js Memory Settings
NODE_OPTIONS="--max-old-space-size=8192 --max-semi-space-size=1024 --optimize-for-size --gc-interval=100"

# Database connection with connection pooling
DATABASE_URL="postgresql://pozmixal-local:pozmixal-local-pwd@localhost:5432/pozmixal-db-local?connection_limit=10&pool_timeout=20"
DATABASE_DIRECT_URL="postgresql://pozmixal-local:pozmixal-local-pwd@localhost:5432/pozmixal-db-local"

# Redis connection with memory optimization
REDIS_URL="redis://localhost:6379"
REDIS_MAX_MEMORY="512mb"
REDIS_MEMORY_POLICY="allkeys-lru"

# Application URLs
FRONTEND_URL="http://localhost:4200"
NEXT_PUBLIC_BACKEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3000"
BACKEND_INTERNAL_URL="http://localhost:3000"

# JWT Secret
JWT_SECRET="memory-optimized-jwt-secret-for-local-development-make-it-long-and-secure"

# Development optimizations
ALLOW_ALL_FEATURES="true"
IS_GENERAL="true"
NX_ADD_PLUGINS=false
STORAGE_PROVIDER="local"

# Performance settings
API_LIMIT=30
NODE_ENV="development"
DISABLE_REGISTRATION=false

# Memory optimization flags
NEXT_PUBLIC_ENABLE_MEMORY_OPTIMIZATION="true"
BACKEND_ENABLE_MEMORY_MONITORING="true"