# ==============================================
# POZMIXAL PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Copy this content to your Vercel Project Settings > Environment Variables

# ----------------------------------------------
# 1. CORE APPLICATION SETTINGS
# ----------------------------------------------
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://app.pozmixal.com
FRONTEND_URL=https://app.pozmixal.com
NEXT_PUBLIC_API_URL=https://app.pozmixal.com
PORT=4200

# ----------------------------------------------
# 2. SECURITY & AUTHENTICATION
# ----------------------------------------------
JWT_SECRET=
NOT_SECURED=false

# Generic OAuth Settings (Renamed from POSTIZ_)
POZMIXAL_GENERIC_OAUTH=false
NEXT_PUBLIC_POZMIXAL_OAUTH_LOGO_URL=
NEXT_PUBLIC_POZMIXAL_OAUTH_DISPLAY_NAME=
NEXT_PUBLIC_APP_NAME="Pozmixal"

# ----------------------------------------------
# 3. DATABASE & INFRASTRUCTURE
# ----------------------------------------------
DATABASE_URL=
REDIS_URL=

# ----------------------------------------------
# 4. FILE STORAGE (S3 / R2)
# ----------------------------------------------
STORAGE_PROVIDER=s3
S3_BUCKET=pozmixal-assets
S3_REGION=auto
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
CLOUDFLARE_ACCOUNT_ID=

# ----------------------------------------------
# 5. EMAIL SERVICES
# ----------------------------------------------
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM_NAME=Pozmixal
EMAIL_FROM_ADDRESS=noreply@pozmixal.com

# ----------------------------------------------
# 6. AI & GENERATION
# ----------------------------------------------
OPENAI_API_KEY=
FAL_KEY=

# ----------------------------------------------
# 7. PAYMENTS (STRIPE)
# ----------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ----------------------------------------------
# 8. SOCIAL MEDIA INTEGRATIONS (OAUTH)
# ----------------------------------------------
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
PINTEREST_APP_ID=
PINTEREST_APP_SECRET=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
THREADS_APP_ID=
THREADS_APP_SECRET=

# ----------------------------------------------
# 9. ANALYTICS & MONITORING
# ----------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
NEXT_PUBLIC_SENTRY_DSN=

# ----------------------------------------------
# 10. SHORT LINK PROVIDERS
# ----------------------------------------------
SHORT_LINK_PROVIDER=
DUB_API_KEY=
LINKDRIP_API_KEY=

# ----------------------------------------------
# 11. OTHER
# ----------------------------------------------
IS_GENERAL=false
NEXT_PUBLIC_BACKEND_URL=https://app.pozmixal.com/api
NEXT_PUBLIC_UPLOAD_STATIC_DIRECTORY=
ls -al apps/frontend/public/*poz*
